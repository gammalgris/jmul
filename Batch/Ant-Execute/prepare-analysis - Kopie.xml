<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="antlib:org.apache.tools.ant" default="info">


    <property name="project.dir" location="${basedir}\..\.." />


    <property name="packages.base.dir" location="${project.dir}\Utilities" />

    <property name="package.concurrent.dir" location="${packages.base.dir}\Concurrent" />
    <property name="package.concurrent.src.dir" location="${package.concurrent.dir}\src" />

    <property name="package.io.dir" location="${packages.base.dir}\IO" />
    <property name="package.io.src.dir" location="${package.io.dir}\src" />

    <property name="package.math.dir" location="${packages.base.dir}\Math" />
    <property name="package.math.src.dir" location="${package.math.dir}\src" />

    <property name="package.misc.dir" location="${packages.base.dir}\Misc" />
    <property name="package.misc.src.dir" location="${package.misc.dir}\src" />

    <property name="package.network.dir" location="${packages.base.dir}\Network" />
    <property name="package.network.src.dir" location="${package.network.dir}\src" />

    <property name="package.persistence.dir" location="${packages.base.dir}\Persistence" />
    <property name="package.persistence.src.dir" location="${package.persistence.dir}\src" />

    <property name="package.reflection.dir" location="${packages.base.dir}\Reflection" />
    <property name="package.reflection.src.dir" location="${package.reflection.dir}\src" />

    <property name="package.string.dir" location="${packages.base.dir}\String" />
    <property name="package.string.src.dir" location="${package.string.dir}\src" />

    <property name="package.test.dir" location="${packages.base.dir}\Test" />
    <property name="package.test.src.dir" location="${package.test.dir}\src" />

    <property name="package.transformation.dir" location="${packages.base.dir}\Transformation" />
    <property name="package.transformation.src.dir" location="${package.transformation.dir}\src" />

    <property name="package.xml.dir" location="${packages.base.dir}\XML" />
    <property name="package.xml.src.dir" location="${package.xml.dir}\src" />


    <property name="project.tmp.dir" location="${project.dir}\tmp" />
    <property name="project.tmp.src.dir" location="${project.tmp.dir}\src" />
    <property name="project.tmp.build.dir" location="${project.tmp.dir}\build" />


    <target name="info">

        <echo />
        <echo message="  project dir ....................... ${project.dir}" />
        <echo />
        <echo />
        <echo message="  packages base dir ................. ${packages.base.dir}" />
        <echo />
        <echo message="  package concurrent dir ............ ${package.concurrent.dir}" />
        <echo message="  package concurrent src dir ........ ${package.concurrent.src.dir}" />
        <echo message="  package io dir .................... ${package.io.dir}" />
        <echo message="  package io src dir ................ ${package.io.src.dir}" />
        <echo message="  package math dir .................. ${package.math.dir}" />
        <echo message="  package math src dir .............. ${package.math.src.dir}" />
        <echo message="  package misc dir .................. ${package.network.dir}" />
        <echo message="  package misc src dir .............. ${package.network.src.dir}" />
        <echo message="  package persistence dir ........... ${package.persistence.dir}" />
        <echo message="  package persistence src dir ....... ${package.persistence.src.dir}" />
        <echo message="  package reflection dir ............ ${package.string.dir}" />
        <echo message="  package reflection src dir ........ ${package.string.src.dir}" />
        <echo message="  package test dir .................. ${package.test.dir}" />
        <echo message="  package test src dir .............. ${package.test.src.dir}" />
        <echo message="  package transformation dir ........ ${package.transformation.dir}" />
        <echo message="  package transformation src dir .... ${package.transformation.src.dir}" />
        <echo message="  package xml dir ................... ${package.xml.dir}" />
        <echo message="  package xml src dir ............... ${package.xml.src.dir}" />
        <echo />
        <echo />
        <echo message="  project tmp dir ................... ${project.tmp.dir}" />
        <echo />
        <echo message="  project tmp src dir ............... ${project.tmp.src.dir}" />
        <echo message="  project tmp build dir ............. ${project.tmp.build.dir}" />
        <echo />

    </target>


    <target name="initTmp">

        <delete dir="${project.tmp.dir}" />
        <mkdir dir="${project.tmp.dir}" />
        <mkdir dir="${project.tmp.src.dir}" />
        <mkdir dir="${project.tmp.build.dir}" />

    </target>


    <target name="disposeTmp">

        <delete dir="${project.tmp.dir}" />

    </target>


    <target name="copySources" depends="initTmp">

        <copy todir="${project.tmp.src.dir}" overwrite="true">
            <fileset dir="${package.concurrent.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.io.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.math.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.misc.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.network.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.persistence.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.reflection.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.string.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.test.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.transformation.src.dir}">
                <include name="**/*.java" />
            </fileset>
            <fileset dir="${package.xml.src.dir}">
                <include name="**/*.java" />
            </fileset>
        </copy>

    </target>


    <target name="compile" depends="copySources">

        <javac srcdir="${project.tmp.src.dir}" destdir="${project.tmp.build.dir}" verbose="true" />

    </target>


</project>
